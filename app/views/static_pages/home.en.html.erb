      <h1 class="section-title">National Precense</h1>
      <%=image_tag "zonas.png"%>
      <%=image_tag "mapa.png"%>
    </div>
  </div>
  
</section>
<!-- How to Reach Me -->
<section id="getintouch" class="fadeInRightBig">
  <div class="container">
    <h1 class="title">
      Get in<span class="highlight orange">Touch</span>
    </h1>
  </div>
  
  <div class="container">        
    <h2 class="sub-title">
      Any concerns you may have you can communicate through this form and we will give you a reply within 48 hours. 
    </h2>

    <%= render 'shared/error_messages', object: @message %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    
    <div class="row">
      <div class="col-sm-8">
        <form accept-charset="UTF-8" action="/" id="new_message" method="post" class="new_message contact">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
          <div class="row">
            <div class="col-sm-6">
              <label class="required" for="name">
                  Your Name
                  <input type="text" name="message[name]" id="message_name" placeholder="John Stuart" required>
              </label>
            </div>
            <div class="col-sm-6">
              <label class="required" for="email">
                  Your Mail
                  <input type="email" name="message[email]" id="message_email" placeholder="John@Stuart.com" required>
              </label>
            </div>
          </div>
           <div class="row">
            <div class="col-sm-6">
              <label class="required" for="name">
                  Subject
                  <input type="text" name="message[subject]" id="message_subject" placeholder="John Stuart" required>
              </label>
            </div>
          </div>
          <label class="required">
            Message
            <textarea id="message_body" name="message[body]" rows="7" placeholder="Tengo una idea para un proyecto..." required></textarea>
          </label>
          <div class="add-sm-top text-center">
            <button class="btn btn-danger" type="submit"><i class="fa fa-envelope"></i> &nbsp; SEND EMAIL</button>
          </div>
        </form>
      </div>
